<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="8dp">


    <TextView
        android:id="@+id/tvJenisDetailSPB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E4E1E1"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="Jenis Barang"
        android:drawableRight="@drawable/ic_arrow_down"
        android:textColor="@android:color/black" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constarintExpandSPB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/textKode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Pekerjaan"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Vol"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvKodeDetailSPB" />

        <TextView
            android:id="@+id/textSatuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Satuan"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvQtySPB" />

        <TextView
            android:id="@+id/textFungsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Fungsi"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSatuanDetailSPB" />

        <TextView
            android:id="@+id/textTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Target Tanggal\nDatang"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFungsiDetailSPB" />

        <TextView
            android:id="@+id/textKeterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Keterangan/ \nTujuannya"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTargetDetailSPB" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:constraint_referenced_ids="textFungsi,textSatuan,textKode,textTarget,textQty,textKeterangan"
            tools:layout_editor_absoluteX="363dp" />

        <TextView
            android:id="@+id/tvKodeDetailSPB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="Kode Pekerjaan"
            app:layout_constraintLeft_toRightOf="@id/barrier3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvQtySPB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="Qty"
            app:layout_constraintLeft_toRightOf="@id/barrier3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvKodeDetailSPB" />

        <TextView
            android:id="@+id/tvSatuanDetailSPB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="Satuan"
            app:layout_constraintLeft_toRightOf="@id/barrier3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvQtySPB" />


        <TextView
            android:id="@+id/tvFungsiDetailSPB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="Fungsi"
            app:layout_constraintLeft_toRightOf="@id/barrier3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSatuanDetailSPB" />

        <TextView
            android:id="@+id/tvTargetDetailSPB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="Target Tanggal\nDatang"
            app:layout_constraintLeft_toRightOf="@id/barrier3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFungsiDetailSPB" />

        <TextView
            android:id="@+id/tvKeteranganDetailSPB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="Keterangan/ \nTujuannya"
            app:layout_constraintLeft_toRightOf="@id/barrier3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTargetDetailSPB" />


    </androidx.constraintlayout.widget.ConstraintLayout>


