<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilKapasitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:boxBackgroundColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Google themselves instruct us to use the deprecated editable attribute -->
        <EditText
            android:id="@+id/etKapasitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kapasitas" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilMerk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:boxBackgroundColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@id/tilKapasitas"
        app:layout_constraintStart_toStartOf="@id/tilKapasitas"
        app:layout_constraintTop_toBottomOf="@id/tilKapasitas">
        <!-- Google themselves instruct us to use the deprecated editable attribute -->
        <EditText
            android:id="@+id/etMerk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_merk" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilWaktuPemakaian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:boxBackgroundColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@id/tilMerk"
        app:layout_constraintStart_toStartOf="@id/tilMerk"
        app:layout_constraintTop_toBottomOf="@+id/tilMerk">
        <!-- Google themselves instruct us to use the deprecated editable attribute -->
        <EditText
            android:id="@+id/etWaktuPemakaian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Waktu Pemakaian" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pickWaktuPemakaian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/pick_date_show_btn_margin_right"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tilWaktuPemakaian"
        app:layout_constraintEnd_toEndOf="@id/tilWaktuPemakaian"
        app:layout_constraintTop_toTopOf="@id/tilWaktuPemakaian">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_range_black_30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>