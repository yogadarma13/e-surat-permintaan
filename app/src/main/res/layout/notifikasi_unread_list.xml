        app:layout_constraintLeft_toRightOf="@+id/tvTextKodeSpNotifUnread"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvKeteranganNotifUnread"
