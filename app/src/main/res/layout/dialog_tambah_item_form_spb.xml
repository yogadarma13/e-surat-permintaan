<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilFungsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:boxBackgroundColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Google themselves instruct us to use the deprecated editable attribute -->
        <EditText
            android:id="@+id/etFungsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fungsi" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:boxBackgroundColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@id/tilFungsi"
        app:layout_constraintStart_toStartOf="@id/tilFungsi"
        app:layout_constraintTop_toBottomOf="@id/tilFungsi">
        <!-- Google themselves instruct us to use the deprecated editable attribute -->
        <EditText
            android:id="@+id/etTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Target" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pickTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/pick_date_show_btn_margin_right"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tilTarget"
        app:layout_constraintEnd_toEndOf="@id/tilTarget"
        app:layout_constraintTop_toTopOf="@id/tilTarget">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_range_black_30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>