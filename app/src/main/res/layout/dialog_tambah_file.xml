<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <Button
        android:id="@+id/btnPilihFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih File"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvNamaFile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama File"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnPilihFile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPilihFile"
        app:layout_constraintTop_toTopOf="@+id/btnPilihFile" />

    <EditText
        android:id="@+id/etKeteranganFile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_radius_riwayat"
        android:hint="Keterangan File"
        android:paddingVertical="16dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPilihFile" />

    <Button
        android:id="@+id/btnTambahFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etKeteranganFile" />

    <Button
        android:id="@+id/btnBatalTambahFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batal"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etKeteranganFile" />

</androidx.constraintlayout.widget.ConstraintLayout>