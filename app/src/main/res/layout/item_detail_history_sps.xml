<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewSPS"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expandedParentSPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvJenisDetailSPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/tvStatusItem"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Jenis Barang" />

            <TextView
                android:id="@+id/tvStatusItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/imgExpandedParentSPS"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Tolak" />

            <ImageView
                android:id="@+id/imgExpandedParentSPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expandedChildSPS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/expandedParentSPS">

            <TextView
                android:id="@+id/labelKode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_kode_pekerjaan"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/labelKategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_kategori"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvKodeDetailSPS" />

            <TextView
                android:id="@+id/labelJenisBarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_jenis_barang"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvKategoriSPS" />

            <TextView
                android:id="@+id/labelQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_vol"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvJenisBarangSPS" />

            <TextView
                android:id="@+id/labelSatuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_satuan"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvQtySPS" />

            <TextView
                android:id="@+id/labelWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_waktu_pelaksanaan"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSatuanDetailSPS" />

            <TextView
                android:id="@+id/labelPersyaratan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_persyaratan"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWaktuDetailSPS" />

            <TextView
                android:id="@+id/labelKeterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_keterangan"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPersyaratanDetailSPS" />

            <TextView
                android:id="@+id/labelPenugasanSPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_ditugaskan_kepada"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvKeteranganDetailSPS" />

            <TextView
                android:id="@+id/labelStatusPenugasanSPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_status_penugasan"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPenugasanDetailSPS" />

            <TextView
                android:id="@+id/labelProcessByPenugasanSPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_process_by_penugasan"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvStatusPenugasanDetailSPS" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="right"
                app:constraint_referenced_ids="labelPersyaratan,labelSatuan,labelKode,labelWaktu,labelQty,labelKeterangan,labelPenugasanSPS,labelStatusPenugasanSPS"
                tools:layout_editor_absoluteX="363dp" />

            <TextView
                android:id="@+id/tvKodeDetailSPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toRightOf="@id/barrier3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Kode Pekerjaan" />

            <TextView
                android:id="@+id/tvKategoriSPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toRightOf="@id/barrier3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvKodeDetailSPS"
                tools:text="Jenis Barang" />

            <TextView
                android:id="@+id/tvJenisBarangSPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toRightOf="@id/barrier3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvKategoriSPS"
                tools:text="Kategori" />

            <TextView
                android:id="@+id/tvQtySPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toRightOf="@id/barrier3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvJenisBarangSPS"
                tools:text="Qty" />

            <TextView
                android:id="@+id/tvSatuanDetailSPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toRightOf="@id/barrier3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvQtySPS"
                tools:text="Satuan" />


            <TextView
                android:id="@+id/tvWaktuDetailSPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:minLines="2"
                app:layout_constraintLeft_toRightOf="@id/barrier3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSatuanDetailSPS"
                tools:text="Waktu\nPelaksanaan" />

            <LinearLayout
                android:id="@+id/tvPersyaratanDetailSPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/barrier3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWaktuDetailSPS" />

            <TextView
                android:id="@+id/tvKeteranganDetailSPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:minLines="2"
                app:layout_constraintLeft_toRightOf="@id/barrier3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPersyaratanDetailSPS"
                tools:text="Keterangan/ \nTujuannya" />

            <TextView
                android:id="@+id/tvPenugasanDetailSPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:minLines="2"
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@id/barrier3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvKeteranganDetailSPS"
                tools:text="IT" />

            <TextView
                android:id="@+id/tvStatusPenugasanDetailSPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:minLines="2"
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@id/barrier3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPenugasanDetailSPS"
                tools:text="Selesai" />

            <TextView
                android:id="@+id/tvProcessByPenugasanDetailSPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toRightOf="@id/barrier3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvStatusPenugasanDetailSPS"
                tools:text="Hello" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tvProcessByPenugasanDetailSPS"
                tools:layout_editor_absoluteX="16dp">

                <Button
                    android:id="@+id/btnHapusSPS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/delete_btn_text"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@+id/btnEditSPS"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnEditSPS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:backgroundTint="@color/colorBlue"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/edit_btn_text"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@+id/btnPenugasanSPS"
                    app:layout_constraintStart_toEndOf="@+id/btnHapusSPS"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginEnd="0dp"
                    app:layout_goneMarginStart="0dp" />

                <Button
                    android:id="@+id/btnPenugasanSPS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="@color/colorGreen"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/penugasan_btn_text"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnEditSPS"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/containerButton1"
                tools:layout_editor_absoluteX="16dp">

                <Button
                    android:id="@+id/btnProcessSPS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="@color/green_history"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/process_btn_text"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@+id/btnUnProcessSPS"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginEnd="0dp" />

                <Button
                    android:id="@+id/btnUnProcessSPS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/un_process_btn_text"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@+id/btnProcessSPS"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginStart="0dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/containerButton2"
                tools:layout_editor_absoluteX="16dp">

                <Button
                    android:id="@+id/btnRejectItem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/decline_btn_text"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@+id/btnRollback"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginEnd="0dp" />

                <Button
                    android:id="@+id/btnRollback"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="@color/colorBlue"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/rollback_btn_text"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@+id/btnRejectItem"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginStart="0dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>